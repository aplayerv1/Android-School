<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="259dp"
        android:layout_height="54dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="3dp"
        android:text="@string/i_love_android"
        android:visibility="visible"
        tools:text="I love Android"
        tools:textColor="@color/black"
        tools:textSize="30sp"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="392dp"
        android:layout_height="214dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginStart="450dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="181dp"
        android:contentDescription="@string/america"
        app:srcCompat="@drawable/americanflagsmall" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch1"
        android:layout_width="192dp"
        android:layout_height="57dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginStart="27dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="300dp"
        android:text="@string/switch_on_off" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginStart="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="159dp"
        android:onClick="onClick"
        android:text="@string/press_me" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginStart="500dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="96dp"
        android:minHeight="48dp"
        android:text="@string/check_this_out"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="259dp"
        android:layout_height="54dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginStart="28dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="3dp"
        android:text="@string/i_love_android"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/switch1"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.403"
        tools:text="I love Android"
        tools:textColor="@color/black"
        tools:textSize="30sp"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginStart="58dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="159dp"
        android:onClick="onClick"

        android:text="@string/press_me"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch1" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInput3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/i_love_androids"
        android:layout_marginTop="27dp"
        android:textColorHint="#616161"
        tools:ignore="TextContrastCheck,TextContrastCheck,TouchTargetSizeCheck" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/TextInput"
        android:layout_width="876dp"
        android:layout_height="65dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="460dp"
        android:hint="@string/i_love_androids"
        android:textColorHint="#616161"
        tools:ignore="TextContrastCheck,TextContrastCheck,TouchTargetSizeCheck" />

</GridLayout>